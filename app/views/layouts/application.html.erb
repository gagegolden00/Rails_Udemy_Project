<!DOCTYPE html>
<html>
  <head>
    <title>MyProject</title>
    <!-- Display flash messages -->
    <% flash.each do|type, msg| %>
    <div>
      <%= msg %>
    </div>
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
